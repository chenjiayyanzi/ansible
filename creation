#create virtual environment
mkdir venv
python3 -n venv ./venv/

#activate virtual environment
source venv/bin/activate

#install ansible
pip3 install ansible

#to install ansible on redhat/centos system
#first need to set up epel repository
yum repolist |grep epel
rpm -ivh http://dl.fedoraproject.org/pub/epel/6/x86_64/ epel-release-6-8.noarch.rpm
yum install epel-release
yum install ansible -y

#check ansible version
ansible --version

#if you want to test on localhost, create host file first
sudo mkdir /etc/ansible
sudo touch /etc/ansible/hosts
echo "[local]
localhost ansible_connection=local">>/etc/ansible/hosts

#then you can start to test ansible commands
ansible local -m ping
ansible local -m "du -sh"

